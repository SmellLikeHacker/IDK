local UICorner_3 = Instance.new("UICorner")
local Value_3 = Instance.new("TextLabel")

--Properties:

GameStat.Name = "GameStat"
GameStat.Parent = game:GetService("CoreGui")
GameStat.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
GameStat.IgnoreGuiInset = true
GameStat.AutoLocalize = true
